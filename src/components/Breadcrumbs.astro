---
interface Crumb {
  label: string;
  href?: string;
}
interface Props {
  crumbs: Crumb[];
}
const { crumbs } = Astro.props;

const schemaItems = [
  { name: 'Home', item: Astro.site?.toString() ?? 'https://archeryrangesnearme.com' },
  ...crumbs.map(c => ({
    name: c.label,
    item: c.href ? new URL(c.href, Astro.site).toString() : undefined,
  })),
];
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex items-center flex-wrap gap-1 text-sm text-stone">
    <li><a href="/" class="hover:text-forest transition-colors">Home</a></li>
    {crumbs.map((crumb, i) => (
      <li class="flex items-center gap-1">
        <span class="text-tan select-none">â€º</span>
        {crumb.href && i < crumbs.length - 1
          ? <a href={crumb.href} class="hover:text-forest transition-colors">{crumb.label}</a>
          : <span aria-current="page" class="text-ink font-medium">{crumb.label}</span>
        }
      </li>
    ))}
  </ol>
</nav>

<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: schemaItems.map((item, idx) => ({
    '@type': 'ListItem',
    position: idx + 1,
    name: item.name,
    ...(item.item ? { item: item.item } : {}),
  })),
})} />
