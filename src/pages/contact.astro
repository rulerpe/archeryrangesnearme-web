---
import BaseLayout from '../layouts/BaseLayout.astro';

const formspreeId = import.meta.env.PUBLIC_FORMSPREE_ID;
---

<BaseLayout
  title="Contact Us — Archery Ranges Near Me"
  description="Get in touch with Archery Ranges Near Me. Report a listing error, ask a question, or sign up for updates."
  canonicalUrl="https://archeryrangesnearme.com/contact/"
>
  <div class="max-w-2xl mx-auto">
    <h1 class="font-display text-4xl sm:text-5xl font-bold text-ink mb-4 leading-tight">
      Get in Touch
    </h1>
    <p class="text-stone text-lg mb-8">
      Have a question, found a listing error, or want to stay updated? We'd love to hear from you.
    </p>

    <div id="form-container">
      <form id="contact-form" class="bg-white border border-tan rounded-2xl shadow-sm p-6 sm:p-8 space-y-6">
        <div>
          <label for="name" class="block text-stone text-sm font-medium mb-1.5">
            Name <span class="text-stone/60 font-normal">(optional)</span>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Your name"
            class="w-full border border-tan rounded-lg px-4 py-2.5 text-ink bg-white placeholder:text-stone/40 focus:outline-none focus:ring-2 focus:ring-forest/20 focus:border-forest transition-colors"
          />
        </div>

        <div>
          <label for="email" class="block text-stone text-sm font-medium mb-1.5">
            Email <span class="text-amber">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="you@example.com"
            class="w-full border border-tan rounded-lg px-4 py-2.5 text-ink bg-white placeholder:text-stone/40 focus:outline-none focus:ring-2 focus:ring-forest/20 focus:border-forest transition-colors"
          />
        </div>

        <div>
          <label for="message" class="block text-stone text-sm font-medium mb-1.5">
            Message <span class="text-amber">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows="5"
            placeholder="What's on your mind?"
            class="w-full border border-tan rounded-lg px-4 py-2.5 text-ink bg-white placeholder:text-stone/40 focus:outline-none focus:ring-2 focus:ring-forest/20 focus:border-forest transition-colors resize-y"
          ></textarea>
        </div>

        <div>
          <button
            type="submit"
            id="submit-btn"
            class="w-full bg-amber text-white px-8 py-3 rounded-xl font-semibold hover:bg-amber-dark transition-colors disabled:opacity-60 disabled:cursor-not-allowed"
          >
            Send Message
          </button>
          <p id="error-msg" class="hidden text-red-600 text-sm mt-3">
            Something went wrong. Please try again.
          </p>
        </div>
      </form>
    </div>

    <div id="success-msg" class="hidden bg-green-50 border border-green-200 text-green-800 rounded-xl p-8 text-center">
      <div class="text-4xl mb-3">✓</div>
      <h2 class="font-display text-2xl font-semibold mb-2">Thanks for reaching out!</h2>
      <p class="text-green-700">We'll get back to you soon.</p>
    </div>
  </div>

  <script is:inline define:vars={{ formspreeId }}>
    const form = document.getElementById('contact-form');
    const submitBtn = document.getElementById('submit-btn');
    const errorMsg = document.getElementById('error-msg');
    const formContainer = document.getElementById('form-container');
    const successMsg = document.getElementById('success-msg');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      submitBtn.textContent = 'Sending…';
      submitBtn.disabled = true;
      errorMsg.classList.add('hidden');

      try {
        const res = await fetch(`https://formspree.io/f/${formspreeId}`, {
          method: 'POST',
          body: new FormData(form),
          headers: { Accept: 'application/json' },
        });

        if (res.ok) {
          formContainer.classList.add('hidden');
          successMsg.classList.remove('hidden');
        } else {
          throw new Error('submit failed');
        }
      } catch {
        errorMsg.classList.remove('hidden');
        submitBtn.textContent = 'Send Message';
        submitBtn.disabled = false;
      }
    });
  </script>
</BaseLayout>
