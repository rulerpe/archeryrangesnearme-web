---
import SEOHead from '../components/SEOHead.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
}
const {
  title,
  description,
  canonicalUrl = Astro.url.href,
  ogImage,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&display=swap" />
    <link rel="stylesheet" media="print" onload="this.media='all'" href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&display=swap" />
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&display=swap" /></noscript>
    <SEOHead
      title={title}
      description={description}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
    />
  </head>
  <body class="bg-cream font-body text-ink min-h-screen flex flex-col">
    <header class="bg-forest sticky top-0 z-50 shadow-md">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-8 flex items-center justify-between h-16">
        <a href="/" class="flex items-center gap-2 hover:opacity-90 transition-opacity">
          <picture>
            <source srcset="/logo.webp" type="image/webp" />
            <img src="/logo-80.png" alt="Archery Ranges Near Me" class="h-8 w-8 sm:h-10 sm:w-10 object-contain" />
          </picture>
          <span class="font-display text-white text-base sm:text-xl font-bold tracking-wide">Archery Ranges Near Me</span>
        </a>
        <nav class="flex gap-4 sm:gap-6 text-sm items-center">
          <a href="/archery-ranges/indoor/" class="text-white/80 hover:text-amber transition-colors hidden sm:inline">Indoor</a>
          <a href="/archery-ranges/with-lessons/" class="text-white/80 hover:text-amber transition-colors hidden sm:inline">Lessons</a>
          <a href="/archery-ranges/with-3d-course/" class="text-white/80 hover:text-amber transition-colors hidden sm:inline">3D Courses</a>
          <a href="/archery-ranges/with-pro-shop/" class="text-white/80 hover:text-amber transition-colors hidden sm:inline">Pro Shops</a>
          <a href="/contact/" class="border border-amber text-white text-sm px-3 py-1 rounded-full hover:bg-amber transition-all font-medium whitespace-nowrap">
            Contact
          </a>
        </nav>
      </div>
    </header>

    <main class="flex-1">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-8 py-8 sm:py-12">
        <slot />
      </div>
    </main>

    <footer class="bg-forest text-white mt-16">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-8 py-8">
        <p class="text-sm text-white/60">&copy; {new Date().getFullYear()} Archery Ranges Near Me. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
